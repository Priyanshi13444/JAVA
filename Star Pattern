import java.util.*;

public class Prac {
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int col=n;
        for(int i=0;i<=n;i++){
            for(int j=1;j<=col;j++){
                System.out.print(" * ");
            }
            System.out.println();
            col--;
        }
    }
}

/* INPUT:
4
OUTPUT:
 *  *  *  *
 *  *  *
 *  *
 *              */
