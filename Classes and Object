import java.util.*;

public class Prac {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Pen P1 = new Pen();         // Create a Pen object
        P1.setColor("Red");         // Set the color of the pen
        P1.setTip(5);               // Set the tip size of the pen
        System.out.println(P1.getColor());
        System.out.println(P1.getTip());
    }
    
    static class Pen {              // Pen class declaration
        private String color;
        private int tip;
        
        // Method to set the color of the pen
        void setColor(String newColor) {
            color = newColor;
        }
        
        // Method to set the tip size of the pen
        void setTip(int newTip) {
            tip = newTip;
        }

        // Method to get the color of the pen
        String getColor() {
            return color;
        }

        // Method to get the tip size of the pen
        int getTip() {
            return tip;
        }
    }
}
