// to take an array as input from user
import java.util.*;
import java.util.Arrays;

public class JavaBasics{
    public static void main(String args[]){
        Scanner sc= new Scanner(System.in);
        System.out.println("Enter the size of array:");                     
        int m=sc.nextInt();                                           //length of array
        System.out.println("Enter the data of array:");
        int[ ] arr= new int[m];                                      //creating a new array
        for(int i=0;i<m;i++){                                        //intialising a loop to take input upto array length 
            int k= sc.nextInt();                                     //input function to input new value in a array from user
            arr[i]=k;                         
        }
        System.out.println("array:");
        System.out.print(" {");
        for(int i=0;i<m;i++){                                       // Printing user input array
            System.out.print(arr[i]+" ");
        }
        System.out.print("}");
    }
}
